# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@rds-endpoint:5432/ecdb

# AWS Configuration
AWS_REGION=ap-northeast-1

# New Relic Configuration
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_ENVIRONMENT=production
NEW_RELIC_APP_NAME=Flask-EC-App

# New Relic Infrastructure Agent Configuration
NRIA_LICENSE_KEY=your-new-relic-license-key
NRIA_DISPLAY_NAME=Flask-EC-Infrastructure
NRIA_VERBOSE=0

# PostgreSQL Connection Configuration for New Relic Monitoring
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=ecdb

# New Relic PostgreSQL Integration Configuration Overrides
NRIA_POSTGRESQL_COLLECTION_LIST=ALL
NRIA_POSTGRESQL_COLLECT_DB_LOCK_METRICS=true
NRIA_POSTGRESQL_COLLECT_BLOAT_METRICS=true
NRIA_POSTGRESQL_QUERY_PERFORMANCE_MONITORING=true
NRIA_POSTGRESQL_COLLECTION_INTERVAL=60
NRIA_POSTGRESQL_MAX_QUERY_LENGTH=4096
